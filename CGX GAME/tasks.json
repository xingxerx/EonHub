{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build EoniaAI",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g", // Include debug symbols
                "EoniaAI.cpp",
                "-o",
                "EoniaAI.exe" // Output executable name
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
